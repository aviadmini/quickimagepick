<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.aviadmini.quickimagepick.sample.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_pick_local_jpg_webp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnCLick"
            android:text="@string/btn_pick_local_jpg_webp_text"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_pick_png_jpg_camera_docs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnCLick"
            android:text="@string/btn_pick_png_jpg_camera_docs_text"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_pick_cam_only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnCLick"
            android:text="@string/btn_pick_cam_only_text"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/main_iv"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        tools:ignore="ContentDescription"
        />

</LinearLayout>
